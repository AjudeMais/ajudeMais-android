<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_main_campanha"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<ImageView-->
            <!--android:id="@+id/thumbnail"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="5dp"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@drawable/ic_campanha" />-->

        <TextView
            android:id="@+id/tv_row_campanha_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingStart="8dp"
            android:paddingTop="5dp"
            android:text="Natal sem fome"
            android:textSize="@dimen/fontDefaultMain"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlSymmetry,UnknownIdInLayout" />

        <TextView
            android:id="@+id/tv_row_campanha_inst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_row_campanha_name"
            android:maxLines="3"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:text="ONG XPTO"
            android:textColor="@color/textSecond"
            android:textSize="@dimen/fontDefaultSubText"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/tv_row_campanha_termino_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_row_campanha_inst"
            android:maxLines="3"
            android:paddingBottom="5dp"
            android:paddingStart="8dp"
            android:text="TÃ©rmino:"
            android:textColor="@color/textSecond"
            android:textSize="@dimen/fontDefaultSubText4"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <TextView
            android:id="@+id/tv_row_campanha_termino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_row_campanha_termino_label"
            android:layout_toEndOf="@+id/tv_row_campanha_termino_label"
            android:maxLines="3"
            android:paddingBottom="5dp"
            android:paddingStart="5dp"
            android:text="22/10/2017"
            android:textColor="@color/textSecond"
            android:textSize="@dimen/fontDefaultSubText4"
            tools:ignore="HardcodedText,RtlSymmetry" />

    </RelativeLayout>

</android.support.v7.widget.CardView>