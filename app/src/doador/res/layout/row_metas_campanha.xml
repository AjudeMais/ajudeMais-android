<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_main_campanha"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="4dp">

        <TextView
            android:id="@+id/tv_nome_categoria"
            android:layout_width="90dp"
            android:layout_marginStart="4dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:text="InformÃ¡tica"
            android:textSize="@dimen/fontDefaultSubText"
            tools:ignore="HardcodedText,RtlSymmetry,UnknownIdInLayout" />

        <SeekBar
            android:id="@+id/sbar_line_meta"
            android:layout_width="0dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="8dp"
            android:max="100"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:textColor="@color/textSecond"
            android:textSize="@dimen/fontDefaultSubText"
            android:layout_height="match_parent"
            android:layout_weight="0.99" />

        <TextView
            android:id="@+id/tv_percentual_atigido"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="2"
            android:layout_marginTop="3dp"
            android:paddingStart="8dp"
            android:text="0%"
            android:textSize="@dimen/fontDefaultSubText"
            tools:ignore="HardcodedText,RtlSymmetry,UnknownIdInLayout" />

    </LinearLayout>

</android.support.v7.widget.CardView>