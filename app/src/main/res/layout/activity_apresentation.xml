<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:padding="16dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.ApresentationActivity">


    <ImageView
        android:id="@+id/ajudmaisLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image_logo_desc"
        android:src="@drawable/ic_apresentation" />

    <ProgressBar
        android:id="@+id/progress_presentation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ajudmaisLoading"
        android:layout_marginTop="24dp"
        android:indeterminateTintMode="src_atop"
        android:max="100" />
</RelativeLayout>