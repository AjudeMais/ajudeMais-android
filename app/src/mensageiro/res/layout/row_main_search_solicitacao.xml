<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_main_"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="false"
    app:cardMaxElevation="3dp"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:id="@+id/cardEndereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/cardview_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_account"
            card_view:ignore="ContentDescription,ObsoleteLayoutParam"
            android:contentDescription="" />

        <LinearLayout
            android:id="@+id/componentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_row_donativo_name"
                android:text="Roupas velhas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/textSecond"
                android:textSize="18sp"
                android:textStyle="bold"
                card_view:ignore="InefficientWeight,RtlHardcoded,RtlSymmetry" />


            <LinearLayout
                android:id="@+id/componentText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_row_donativo_descricao"
                    android:text="Roupas em bom estado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/textSecond"
                    android:textSize="16sp"
                    card_view:ignore="RtlHardcoded,RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_row_donativo_quantidade"
                    android:text="50"
                    android:layout_width="wrap_content"
                    android:paddingLeft="3dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/textSecond"
                    android:textSize="16sp"
                    card_view:ignore="RtlHardcoded,RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_row_doador_nome"
                    android:layout_width="wrap_content"
                    android:text="JosÃ© da Silva"
                    android:paddingLeft="3dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="16sp"
                    card_view:ignore="RtlHardcoded,RtlSymmetry" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>